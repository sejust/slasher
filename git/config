git config --global user.name slasher
git config --global user.email mcq.sejust@gmail.com
git config --global merge.tool vimdiff
git config --global diff.algorithm histogram
git config --global color.ui true

git config --global alias.st status
git config --global alias.br branch
git config --global alias.co checkout
git config --global alias.ci commit
git config --global alias.ll 'log -p'
git config --global alias.fp 'fetch -p'
git config --global alias.reb2 'rebase -i HEAD~2'
git config --global alias.empty 'commit --allow-empty'
git config --global alias.remshow 'remote show origin'
git config --global alias.list "log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(dim white)%an%C(reset) %C(dim blue)(%ar)%C(reset)' -M"
git config --global alias.history "log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(dim white)%an%C(reset) %C(dim blue)(%ar)%C(reset)' --all"
git config --global alias.simple "log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(dim white)%an%C(reset) %C(dim blue)(%ar)%C(reset)' --simplify-by-decoration --all"
git config --global alias.myci "log --author=slasher --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(dim white)Êƒ %an%C(reset) %C(dim blue)(%ar)%C(reset)' --graph --decorate --all"
