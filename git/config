git config --global user.name Slasher
git config --global user.email mcq.sejust@gmail.com
git config --global merge.tool vimdiff
git config --global color.ui true

git config --global alias.st status
git config --global alias.br branch
git config --global alias.co checkout
git config --global alias.ci commit
git config --global alias.reb2 'rebase -i HEAD~2'
git config --global alias.empty 'commit --allow-empty'
git config --global alias.remshow 'remote show origin'
git config --global alias.list 'log --color --graph --decorate -M --pretty=oneline --abbrev-commit -M'
git config --global alias.history 'log --color --graph --decorate -M --pretty=oneline --abbrev-commit -M --all'

